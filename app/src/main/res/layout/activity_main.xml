<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <!-- Main Card View -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:id="@+id/mainCard"
        app:cardBackgroundColor="@color/light_blue"
        style="@style/CustomCardViewStyle"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Top Bar with buttons -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true">

                <ImageButton
                    android:id="@+id/menuButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/menu"
                    android:layout_alignParentStart="true"
                    android:scaleType="centerInside"
                    android:contentDescription="Menu button" />

                <ImageButton
                    android:id="@+id/settingsButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/wsettings"
                    android:layout_alignParentEnd="true"
                    android:scaleType="centerInside"
                    android:contentDescription="Settings button" />
            </RelativeLayout>

            <!-- Circular Profile Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="60dp"
                app:cardElevation="10dp"
                app:strokeColor="@color/dark_blue"
                app:strokeWidth="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/wsettings"
                    android:visibility="visible"
                    android:scaleType="centerInside" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_below="@id/cardview"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_margin="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USA"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_margin="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disconnected"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_margin="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connected"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_margin="2dp" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:background="@color/white" />

            </LinearLayout>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Recommended Locations -->
    <LinearLayout
        android:layout_below="@id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Recommended locations"
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <!-- USA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@drawable/circle"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/flag_us" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="United States"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/wifi" />
        </LinearLayout>

        <!-- France -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@drawable/circle"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/flag_fr" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="France"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/wifi" />

        </LinearLayout>

        <!-- Australia -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@drawable/circle"
            android:paddingHorizontal="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/flag_au" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Australia"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/wifi" />

            

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>